<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">


    <TextView
        android:id="@+id/tv_list_totais_tipo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_list_totais_quantidade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Horas Normais" />

    <TextView
        android:id="@+id/tv_list_totais_quantidade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right|center"
        app:layout_constraintEnd_toStartOf="@+id/tv_list_totais_valor"
        app:layout_constraintStart_toEndOf="@+id/tv_list_totais_tipo"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="60 horas" />

    <TextView
        android:id="@+id/tv_list_totais_valor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right|center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_list_totais_quantidade"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="400 R$" />
</android.support.constraint.ConstraintLayout>