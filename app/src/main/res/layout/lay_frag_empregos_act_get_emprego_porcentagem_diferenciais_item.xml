<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/margin_card"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_stag_valor"
        style="@style/DefLargeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        tools:text="54,60R$"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt_clean_pdif"
        app:layout_constraintStart_toEndOf="@+id/tv_stag_porcentagem"
        app:layout_constraintTop_toBottomOf="@+id/tv_stag_header_dia" />

    <TextView
        android:id="@+id/tv_stag_porcentagem"
        style="@style/DefLargeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        tools:text="120 %"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/primary_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_stag_valor"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/tv_stag_header_dia" />

    <TextView
        android:id="@+id/tv_stag_header_dia"
        style="@style/DefSmallText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        tools:text="Seg"
        app:layout_constraintEnd_toEndOf="@+id/tv_stag_porcentagem"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_stag_porcentagem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_stag_header_dia"
        app:srcCompat="@drawable/ic_hora" />

    <ImageButton
        android:id="@+id/bt_clean_pdif"
        style="@style/DefFlatButton"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:srcCompat="@drawable/ic_clean" />

    <TextView
        android:id="@+id/textView7"
        style="@style/DefSmallText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/str_valor"
        app:layout_constraintEnd_toStartOf="@+id/bt_clean_pdif"
        app:layout_constraintStart_toEndOf="@+id/tv_stag_header_dia"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>

